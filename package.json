{
  "name": "react-matic",
  "version": "1.0.0",
  "description": "React based Homematic UI",
  "main": "pages/index.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node server.js --watch server.js --watch ./server/",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "standard --verbose | snazzy && stylelint '**/*.js'",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michl-b/react-matic.git"
  },
  "keywords": [
    "homematic ip",
    "homematic"
  ],
  "author": "Michael Bartsch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michl-b/react-matic/issues"
  },
  "homepage": "https://github.com/michl-b/react-matic#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-plugin-styled-components": "^1.7.1",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.5.7",
    "express": "^4.16.3",
    "express-status-monitor": "^1.1.5",
    "fs": "^0.0.1-security",
    "isomorphic-unfetch": "^2.1.1",
    "jquery": "^3.4.0",
    "js-base64": "^2.4.8",
    "net": "^1.0.2",
    "next": "^6.1.1",
    "node-lightify": "^2.1.13",
    "polished": "^2.0.3",
    "react": "^16.5.1",
    "react-color": "^2.14.1",
    "react-dom": "^16.5.1",
    "react-rangeslider": "^2.2.0",
    "styled-button-component": "^2.0.0",
    "styled-components": "^3.4.6",
    "styled-container-component": "^2.0.0",
    "styled-icons": "^3.0.0",
    "styled-navbar-component": "^2.0.0",
    "styled-system": "^3.1.3",
    "tinytime": "^0.2.6",
    "xml2js": "^0.4.19",
    "yup": "^0.26.5"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "syntax": "scss"
  }
}
